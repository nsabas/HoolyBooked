<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                                      https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity
            name="App\Domain\Model\Slot" table="slot"
            repository-class="App\Infrastructure\Doctrine\Repository\SlotRepository"
    >
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="uid" type="string" length="64" />

        <field name="name" type="string" length="180" />
        <field name="fullAddress" type="string" length="255" />
        <field name="street" type="string" length="180" />
        <field name="city" type="string" length="180" />
        <field name="state" type="string" length="180" />
        <field name="zipCode" type="string" length="180" />
        <field name="country" type="string" length="180" />

        <many-to-one field="campus" target-entity="App\Domain\Model\Campus" inversed-by="slots">
            <join-column name="campus_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>

        <one-to-many field="bookings" target-entity="App\Domain\Model\Booking" mapped-by="slot">
            <orphan-removal>true</orphan-removal>
        </one-to-many>

        <one-to-many field="unavailabilities" target-entity="App\Domain\Model\Unavailability" mapped-by="slot">
            <orphan-removal>true</orphan-removal>
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>
    </entity>
</doctrine-mapping>
